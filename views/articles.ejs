<%- include('partials/header') %>
<div class="max-w-6xl mx-auto p-8">
    <div class="grid gap-6">
        <% articles.forEach(art => { %>
            <div class="bg-white p-6 rounded-2xl border shadow-sm">
                <h2 class="text-xl font-bold text-blue-600"><%= art.title %></h2>
                <p class="text-gray-600 mt-2"><%= art.content.substring(0, 200) %>...</p>
            </div>
        <% }) %>
    </div>
    <a href="/dashboard" class="mt-8 inline-block text-gray-500">‚Üê Kembali ke Dashboard</a>
</div>