<%- include('../partials/header') %>

<div class="bg-[#F8FAFC] min-h-screen py-12 px-4">
    <div class="max-w-6xl mx-auto"> <div class="flex flex-col md:flex-row items-start md:items-center justify-between mb-12 gap-4">
            <div>
                <h1 class="text-4xl font-black text-slate-900 tracking-tight">Perpustakaan Edukasi</h1>
                <p class="text-slate-500 font-medium mt-1 text-lg">Materi bacaan eksklusif untuk tingkatkan progresmu.</p>
            </div>
            <a href="/dashboard" class="flex items-center gap-2 text-sm font-black text-slate-400 hover:text-indigo-600 transition group">
                <span class="group-hover:-translate-x-1 transition-transform">‚Üê</span> Kembali ke Dashboard
            </a>
        </div>

        <div class="space-y-6">
            <% articles.forEach((art) => { %>
                <div class="group relative bg-white rounded-[2.5rem] border border-slate-100 shadow-sm hover:shadow-2xl hover:shadow-indigo-100/40 transition-all duration-500 overflow-hidden">
                    <div class="absolute left-0 top-0 bottom-0 w-2 bg-indigo-600 translate-x-[-100%] group-hover:translate-x-0 transition-transform duration-500"></div>

                    <div class="p-8 sm:p-10 flex flex-col md:flex-row gap-8 items-center">
                        
                        <div class="w-16 h-16 bg-indigo-50 rounded-2xl flex items-center justify-center text-3xl group-hover:scale-110 group-hover:bg-indigo-600 group-hover:text-white transition-all duration-500 shrink-0">
                            üìÑ
                        </div>

                        <div class="flex-grow">
                            <div class="flex items-center gap-3 mb-3">
                                <span class="text-slate-300 text-xs">‚Ä¢</span>
                                <span class="text-slate-400 text-xs font-bold uppercase">
                                    <%= art.createdAt.toLocaleDateString('id-ID', { day: 'numeric', month: 'long' }) %>
                                </span>
                            </div>
                            
                            <h2 class="text-2xl font-black text-slate-800 mb-3 group-hover:text-indigo-600 transition-colors leading-tight">
                                <%= art.title %>
                            </h2>
                            
                            <p class="text-slate-500 leading-relaxed line-clamp-2 text-base max-w-2xl">
                                <%= art.content.substring(0, 180) %>...
                            </p>
                        </div>

                        <div class="shrink-0 w-full md:w-auto">
                            <a href="/dashboard/articles/<%= art.id %>" class="flex items-center justify-center gap-2 px-10 py-4 bg-slate-900 text-white rounded-2xl font-black text-sm hover:bg-indigo-600 transition-all shadow-xl shadow-slate-200 hover:shadow-indigo-200 active:scale-95">
                                Lihat Detail
                                <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="3" d="M9 5l7 7-7 7" />
                                </svg>
                            </a>
                        </div>
                    </div>
                </div>
            <% }) %>
        </div>
    </div>
</div>