<%- include('../partials/header') %>

<div class="bg-[#F8FAFC] min-h-screen py-12 px-4">
    <div class="max-w-4xl mx-auto">
        <nav class="flex items-center justify-between mb-10">
            <a href="/dashboard/articles" class="group inline-flex items-center gap-3 text-slate-500 hover:text-indigo-600 transition-all font-black text-sm uppercase tracking-widest">
                <div class="w-10 h-10 rounded-2xl bg-white border border-slate-200 flex items-center justify-center shadow-sm group-hover:bg-indigo-600 group-hover:text-white group-hover:border-indigo-600 transition-all">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="3" d="M15 19l-7-7 7-7" />
                    </svg>
                </div>
                Kembali
            </a>
        </nav>

        <article class="bg-white rounded-[3rem] shadow-xl shadow-slate-200/60 border border-slate-100 overflow-hidden">
            <div class="h-2 w-full bg-slate-100">
                <div class="h-full bg-indigo-600 w-full opacity-20"></div>
            </div>

            <div class="p-8 md:p-16">
                <header class="mb-12">
                    <div class="flex items-center gap-3 mb-8">
                        <div class="w-12 h-1 bg-indigo-600 rounded-full"></div>
                        <p class="text-indigo-600 font-black text-xs uppercase tracking-[0.3em]">Knowledge Base</p>
                    </div>
                    
                    <h1 class="text-4xl md:text-5xl font-black text-slate-900 leading-[1.2] mb-10 tracking-tight">
                        <%= article.title %>
                    </h1>

                    <div class="flex flex-wrap items-center gap-6 p-6 bg-slate-50 rounded-[2rem] border border-slate-100">
                        <div>
                            <p class="text-[10px] font-black text-slate-400 uppercase tracking-widest">Terbit Pada</p>
                            <p class="text-sm font-bold text-slate-700">
                                <%= article.createdAt.toLocaleDateString('id-ID', { day: 'numeric', month: 'long', year: 'numeric' }) %>
                            </p>
                        </div>
                    </div>
                </header>

                <div class="prose prose-indigo max-w-none">
                    <div class="text-slate-700 leading-[2] text-lg whitespace-pre-line font-medium space-y-8 tracking-wide">
                        <%= article.content %>
                    </div>
                </div>

                <div class="mt-20 pt-10 border-t border-slate-100 flex flex-col items-center text-center">
                    <a href="/dashboard/articles" class="mt-8 px-10 py-4 bg-slate-900 text-white rounded-2xl font-black text-sm hover:bg-indigo-600 transition-all shadow-xl active:scale-95">
                        Cari Materi Lainnya
                    </a>
                </div>
            </div>
        </article>
    </div>
</div>