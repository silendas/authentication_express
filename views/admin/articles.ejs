<%- include('../partials/header') %>

<%- include('../partials/admin-sidebar') %>

<div class="max-w-6xl mx-auto p-8">
    <div class="flex justify-between items-center mb-8">
        <h1 class="text-3xl font-black text-gray-800">Manajemen Artikel</h1>
        <button onclick="openModal('create')" class="bg-blue-600 text-white px-6 py-2 rounded-xl font-bold hover:bg-blue-700 transition">
            + Tambah Artikel
        </button>
    </div>

    <div class="bg-white border rounded-2xl overflow-hidden shadow-sm">
        <table class="w-full text-left">
            <thead class="bg-gray-50 border-b">
                <tr>
                    <th class="p-4 font-bold text-gray-600">Judul Artikel</th>
                    <th class="p-4 font-bold text-gray-600">Tanggal Dibuat</th>
                    <th class="p-4 font-bold text-gray-600 text-center">Aksi</th>
                </tr>
            </thead>
            <tbody>
                <% articles.forEach(art => { %>
                <tr class="border-b last:border-0 hover:bg-gray-50">
                    <td class="p-4 font-medium text-gray-800"><%= art.title %></td>
                    <td class="p-4 text-gray-500 text-sm"><%= art.createdAt.toLocaleDateString('id-ID') %></td>
                    <td class="p-4 text-center space-x-2">
                        <button onclick="openModal('edit', '<%= art.id %>', '<%= art.title %>', `<%= art.content %>`)" 
                                class="text-yellow-600 font-bold hover:underline">Edit</button>
                        
                        <form action="/admin/articles/delete/<%= art.id %>" method="POST" class="inline" onsubmit="return confirm('Hapus artikel ini?')">
                            <button type="submit" class="text-red-600 font-bold hover:underline">Hapus</button>
                        </form>
                    </td>
                </tr>
                <% }) %>
            </tbody>
        </table>
    </div>
</div>

<div id="articleModal" class="fixed inset-0 bg-black bg-opacity-50 hidden items-center justify-center z-50 p-4">
    <div class="bg-white w-full max-w-2xl rounded-3xl shadow-2xl overflow-hidden">
        <div class="p-6 border-b flex justify-between items-center">
            <h2 id="modalTitle" class="text-xl font-black">Tambah Artikel</h2>
            <button onclick="closeModal()" class="text-gray-400 hover:text-gray-600 text-2xl">&times;</button>
        </div>
        <form id="articleForm" method="POST" class="p-6 space-y-4">
            <div>
                <label class="block mb-1 font-bold text-gray-700">Judul</label>
                <input type="text" id="formTitle" name="title" class="w-full p-3 border rounded-xl outline-none focus:ring-2 focus:ring-blue-500" required>
            </div>
            <div>
                <label class="block mb-1 font-bold text-gray-700">Konten</label>
                <textarea id="formContent" name="content" class="w-full p-3 border rounded-xl h-48 outline-none focus:ring-2 focus:ring-blue-500" required></textarea>
            </div>
            <div class="flex justify-end space-x-3 pt-4">
                <button type="button" onclick="closeModal()" class="px-6 py-2 font-bold text-gray-500">Batal</button>
                <button type="submit" class="bg-blue-600 text-white px-8 py-2 rounded-xl font-bold hover:bg-blue-700">Simpan</button>
            </div>
        </form>
    </div>
</div>

<script>
    const modal = document.getElementById('articleModal');
    const form = document.getElementById('articleForm');
    const modalTitle = document.getElementById('modalTitle');
    const formTitle = document.getElementById('formTitle');
    const formContent = document.getElementById('formContent');

    function openModal(mode, id = '', title = '', content = '') {
        modal.classList.remove('hidden');
        modal.classList.add('flex');
        
        if (mode === 'edit') {
            modalTitle.innerText = 'Edit Artikel';
            form.action = `/admin/articles/edit/${id}`;
            formTitle.value = title;
            formContent.value = content;
        } else {
            modalTitle.innerText = 'Tambah Artikel';
            form.action = '/admin/articles/create';
            form.reset();
        }
    }

    function closeModal() {
        modal.classList.add('hidden');
        modal.classList.remove('flex');
    }

    window.onclick = function(event) {
        if (event.target == modal) closeModal();
    }
</script>