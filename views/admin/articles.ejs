<%- include('../partials/header') %>
<%- include('../partials/admin-sidebar') %>

<div class="p-4 sm:p-8 bg-gray-50/50 min-h-screen">
    <div class="flex flex-col sm:flex-row justify-between items-start sm:items-center gap-4 mb-10">
        <div>
            <h1 class="text-3xl font-black text-slate-900 tracking-tight">Manajemen Artikel</h1>
            <p class="text-slate-500 mt-1">Tulis dan publikasikan edukasi terbaru untuk member.</p>
        </div>
        <button onclick="openModal('create')" class="bg-blue-600 hover:bg-blue-700 text-white px-6 py-3 rounded-2xl font-bold shadow-lg shadow-blue-200 transition-all flex items-center gap-2 active:scale-95">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
            </svg>
            Tambah Artikel
        </button>
    </div>

    <div class="bg-white border border-slate-200 rounded-3xl overflow-hidden shadow-sm backdrop-blur-sm">
        <div class="overflow-x-auto">
            <table class="w-full text-left">
                <thead class="bg-slate-50/50 border-b border-slate-100">
                    <tr>
                        <th class="p-5 font-bold text-slate-600 text-sm uppercase tracking-wider">Judul Artikel</th>
                        <th class="p-5 font-bold text-slate-600 text-sm uppercase tracking-wider">Tanggal Dibuat</th>
                        <th class="p-5 font-bold text-slate-600 text-sm uppercase tracking-wider text-center">Aksi</th>
                    </tr>
                </thead>
                <tbody class="divide-y divide-slate-100">
                    <% articles.forEach(art => { %>
                    <tr class="hover:bg-blue-50/30 transition-colors group">
                        <td class="p-5 font-semibold text-slate-800">
                            <div class="flex items-center gap-3">
                                <div class="w-2 h-2 rounded-full bg-blue-400 opacity-0 group-hover:opacity-100 transition-opacity"></div>
                                <%= art.title %>
                            </div>
                        </td>
                        <td class="p-5 text-slate-500 text-sm">
                            <%= art.createdAt.toLocaleDateString('id-ID', { day: 'numeric', month: 'long', year: 'numeric' }) %>
                        </td>
                        <td class="p-5 text-center">
                            <div class="flex justify-center gap-4">
                                <button onclick="openModal('edit', '<%= art.id %>', '<%= art.title %>', `<%= art.content %>`)" 
                                        class="text-amber-600 font-bold hover:text-amber-700 transition flex items-center gap-1 text-sm">
                                    Edit
                                </button>
                                <form action="/admin/articles/delete/<%= art.id %>" method="POST" class="inline" onsubmit="return confirm('Hapus artikel ini?')">
                                    <button type="submit" class="text-rose-600 font-bold hover:text-rose-700 transition text-sm">
                                        Hapus
                                    </button>
                                </form>
                            </div>
                        </td>
                    </tr>
                    <% }) %>
                </tbody>
            </table>
        </div>
    </div>
</div>

<div id="articleModal" class="fixed inset-0 bg-slate-900/60 backdrop-blur-sm hidden items-center justify-center z-[60] p-4 transition-all">
    <div class="bg-white w-full max-w-2xl rounded-[2rem] shadow-2xl overflow-hidden transform transition-all">
        <div class="p-8 border-b border-slate-100 flex justify-between items-center bg-slate-50/50">
            <h2 id="modalTitle" class="text-2xl font-black text-slate-800">Tambah Artikel</h2>
            <button onclick="closeModal()" class="w-10 h-10 flex items-center justify-center rounded-full bg-white border border-slate-200 text-slate-400 hover:text-rose-500 transition shadow-sm">&times;</button>
        </div>
        <form id="articleForm" method="POST" class="p-8 space-y-6">
            <div>
                <label class="block mb-2 font-bold text-slate-700 ml-1">Judul Artikel</label>
                <input type="text" id="formTitle" name="title" placeholder="Masukkan judul menarik..." class="w-full px-5 py-4 bg-slate-50 border border-slate-200 rounded-2xl outline-none focus:ring-4 focus:ring-blue-500/10 focus:border-blue-500 transition-all" required>
            </div>
            <div>
                <label class="block mb-2 font-bold text-slate-700 ml-1">Isi Konten</label>
                <textarea id="formContent" name="content" placeholder="Tulis edukasi di sini..." class="w-full px-5 py-4 bg-slate-50 border border-slate-200 rounded-2xl h-56 outline-none focus:ring-4 focus:ring-blue-500/10 focus:border-blue-500 transition-all resize-none" required></textarea>
            </div>
            <div class="flex justify-end gap-4 pt-4">
                <button type="button" onclick="closeModal()" class="px-8 py-3 font-bold text-slate-400 hover:text-slate-600 transition">Batal</button>
                <button type="submit" class="bg-blue-600 text-white px-10 py-3 rounded-2xl font-bold hover:bg-blue-700 shadow-lg shadow-blue-200 transition-all active:scale-95">Simpan Artikel</button>
            </div>
        </form>
    </div>
</div>

<script>
    function openModal(mode, id = '', title = '', content = '') {
        const modal = document.getElementById('articleModal');
        modal.classList.remove('hidden');
        modal.classList.add('flex');
        if (mode === 'edit') {
            document.getElementById('modalTitle').innerText = 'Edit Artikel';
            document.getElementById('articleForm').action = `/admin/articles/edit/${id}`;
            document.getElementById('formTitle').value = title;
            document.getElementById('formContent').value = content;
        } else {
            document.getElementById('modalTitle').innerText = 'Tambah Artikel';
            document.getElementById('articleForm').action = '/admin/articles/create';
            document.getElementById('articleForm').reset();
        }
    }
    function closeModal() {
        const modal = document.getElementById('articleModal');
        modal.classList.add('hidden');
        modal.classList.remove('flex');
    }
</script>