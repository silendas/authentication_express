<%- include('../partials/header') %>
<%- include('../partials/admin-sidebar') %>

<div class="p-4 sm:p-8 bg-gray-50/50 min-h-screen">
    <div class="flex flex-col sm:flex-row justify-between items-start sm:items-center gap-4 mb-10">
        <div>
            <h1 class="text-3xl font-black text-slate-900 tracking-tight">Manajemen Video</h1>
            <p class="text-slate-500 mt-1">Kelola konten video pembelajaran untuk member.</p>
        </div>
        <button onclick="openVideoModal('create')" class="bg-rose-600 hover:bg-rose-700 text-white px-6 py-3 rounded-2xl font-bold shadow-lg shadow-rose-200 transition-all flex items-center gap-2 active:scale-95">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 10l4.553-2.276A1 1 0 0121 8.618v6.764a1 1 0 01-1.447.894L15 14M5 18h8a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v8a2 2 0 002 2z" />
            </svg>
            Tambah Video
        </button>
    </div>

    <div class="bg-white border border-slate-200 rounded-3xl overflow-hidden shadow-sm backdrop-blur-sm">
        <div class="overflow-x-auto">
            <table class="w-full text-left">
                <thead class="bg-slate-50/50 border-b border-slate-100">
                    <tr>
                        <th class="p-5 font-bold text-slate-600 text-sm uppercase tracking-wider">Judul Video</th>
                        <th class="p-5 font-bold text-slate-600 text-sm uppercase tracking-wider text-center">Preview</th>
                        <th class="p-5 font-bold text-slate-600 text-sm uppercase tracking-wider text-center">Aksi</th>
                    </tr>
                </thead>
                <tbody class="divide-y divide-slate-100">
                    <% videos.forEach(vid => { %>
                    <tr class="hover:bg-rose-50/30 transition-colors group">
                        <td class="p-5 font-semibold text-slate-800">
                            <div class="flex items-center gap-3">
                                <div class="w-2 h-2 rounded-full bg-rose-400 opacity-0 group-hover:opacity-100 transition-opacity"></div>
                                <%= vid.title %>
                            </div>
                        </td>
                        <td class="p-5 text-center">
                            <a href="<%= vid.videoUrl %>" target="_blank" class="inline-flex items-center px-4 py-1.5 rounded-full bg-slate-100 text-slate-600 text-xs font-bold hover:bg-slate-200 transition-all gap-1">
                                Lihat Link â†—
                            </a>
                        </td>
                        <td class="p-5 text-center">
                            <div class="flex justify-center gap-4">
                                <button onclick="openVideoModal('edit', '<%= vid.id %>', '<%= vid.title %>', '<%= vid.videoUrl %>')" 
                                        class="text-amber-600 font-bold hover:text-amber-700 transition text-sm">
                                    Edit
                                </button>
                                <form action="/admin/videos/delete/<%= vid.id %>" method="POST" class="inline" onsubmit="return confirm('Hapus video ini?')">
                                    <button type="submit" class="text-rose-600 font-bold hover:text-rose-700 transition text-sm">
                                        Hapus
                                    </button>
                                </form>
                            </div>
                        </td>
                    </tr>
                    <% }) %>
                </tbody>
            </table>
        </div>
    </div>
</div>

<div id="videoModal" class="fixed inset-0 bg-slate-900/60 backdrop-blur-sm hidden items-center justify-center z-[60] p-4 transition-all">
    <div class="bg-white w-full max-w-xl rounded-[2rem] shadow-2xl overflow-hidden transform transition-all">
        <div class="p-8 border-b border-slate-100 flex justify-between items-center bg-slate-50/50">
            <h2 id="modalVideoTitle" class="text-2xl font-black text-slate-800">Tambah Video</h2>
            <button onclick="closeVideoModal()" class="w-10 h-10 flex items-center justify-center rounded-full bg-white border border-slate-200 text-slate-400 hover:text-rose-500 transition shadow-sm">&times;</button>
        </div>
        <form id="videoForm" method="POST" class="p-8 space-y-6">
            <div>
                <label class="block mb-2 font-bold text-slate-700 ml-1">Judul Video</label>
                <input type="text" id="formVideoTitle" name="title" placeholder="Nama materi video..." class="w-full px-5 py-4 bg-slate-50 border border-slate-200 rounded-2xl outline-none focus:ring-4 focus:ring-rose-500/10 focus:border-rose-500 transition-all" required>
            </div>
            <div>
                <label class="block mb-2 font-bold text-slate-700 ml-1">YouTube URL</label>
                <input type="text" id="formVideoUrl" name="videoUrl" placeholder="https://www.youtube.com/embed/..." class="w-full px-5 py-4 bg-slate-50 border border-slate-200 rounded-2xl outline-none focus:ring-4 focus:ring-rose-500/10 focus:border-rose-500 transition-all" required>
                <p class="text-[11px] text-slate-400 mt-2 italic px-1">Gunakan link embed agar dapat diputar langsung di dashboard.</p>
            </div>
            <div class="flex justify-end gap-4 pt-4">
                <button type="button" onclick="closeVideoModal()" class="px-8 py-3 font-bold text-slate-400 hover:text-slate-600 transition">Batal</button>
                <button type="submit" class="bg-rose-600 text-white px-10 py-3 rounded-2xl font-bold hover:bg-rose-700 shadow-lg shadow-rose-200 transition-all active:scale-95">Simpan Video</button>
            </div>
        </form>
    </div>
</div>

<script>
    function openVideoModal(mode, id = '', title = '', url = '') {
        const modal = document.getElementById('videoModal');
        modal.classList.remove('hidden');
        modal.classList.add('flex');
        if (mode === 'edit') {
            document.getElementById('modalVideoTitle').innerText = 'Edit Video';
            document.getElementById('videoForm').action = `/admin/videos/edit/${id}`;
            document.getElementById('formVideoTitle').value = title;
            document.getElementById('formVideoUrl').value = url;
        } else {
            document.getElementById('modalVideoTitle').innerText = 'Tambah Video';
            document.getElementById('videoForm').action = '/admin/videos/create';
            document.getElementById('videoForm').reset();
        }
    }
    function closeVideoModal() {
        const modal = document.getElementById('videoModal');
        modal.classList.add('hidden');
        modal.classList.remove('flex');
    }
</script>