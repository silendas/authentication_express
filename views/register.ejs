<%- include('partials/header') %>

<main class="flex items-center justify-center min-h-screen w-full px-4 bg-gray-50 py-12">
    <div class="bg-white p-8 rounded-3xl shadow-2xl w-full max-w-md border border-gray-50 transform transition-all relative">
        
        <div class="absolute top-6 left-6">
            <a href="/" class="flex items-center text-gray-400 hover:text-indigo-600 transition duration-200">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18" />
                </svg>
                <span class="text-xs font-bold uppercase tracking-wider">Home</span>
            </a>
        </div>
        
        <div class="text-center mb-8 mt-7">
            <h3 class="text-3xl font-extrabold text-gray-900 tracking-tight">Daftar Akun</h3>
        </div>

        <form action="/api/auth/register" method="POST" class="space-y-4">
            <div>
                <label class="block text-sm font-semibold text-gray-700 mb-1 ml-1">Nama Lengkap</label>
                <input type="text" name="fullName" required
                    class="w-full px-4 py-3 rounded-xl border border-gray-200 focus:ring-4 focus:ring-indigo-100 focus:border-indigo-500 outline-none transition duration-200 placeholder-gray-400" 
                    placeholder="John Doe">
            </div>

            <div>
                <label class="block text-sm font-semibold text-gray-700 mb-1 ml-1">Email</label>
                <input type="email" name="email" required
                    class="w-full px-4 py-3 rounded-xl border border-gray-200 focus:ring-4 focus:ring-indigo-100 focus:border-indigo-500 outline-none transition duration-200 placeholder-gray-400" 
                    placeholder="john@example.com">
            </div>

            <div>
                <label class="block text-sm font-semibold text-gray-700 mb-1 ml-1">Password</label>
                <input type="password" name="password" required
                    class="w-full px-4 py-3 rounded-xl border border-gray-200 focus:ring-4 focus:ring-indigo-100 focus:border-indigo-500 outline-none transition duration-200 placeholder-gray-400" 
                    placeholder="••••••••">
            </div>

            <button type="submit" 
                class="w-full bg-indigo-600 hover:bg-indigo-700 text-white font-bold py-3.5 rounded-xl shadow-lg shadow-indigo-200 transition duration-300 transform active:scale-[0.98]">
                Buat Akun Sekarang
            </button>
        </form>

        <div class="relative my-6">
            <div class="absolute inset-0 flex items-center"><div class="w-full border-t border-gray-100"></div></div>
            <div class="relative flex justify-center text-xs uppercase"><span class="px-3 bg-white text-gray-400 tracking-widest font-medium">Atau Daftar Dengan</span></div>
        </div>

        <div class="space-y-3">
            <a href="/api/auth/google" 
                class="flex items-center justify-center w-full px-4 py-3 border-2 border-gray-100 rounded-xl shadow-sm bg-white text-sm font-bold text-gray-700 hover:bg-gray-50 hover:border-gray-200 transition duration-300">
                <img class="h-5 w-5 mr-3" src="https://www.gstatic.com/firebasejs/ui/2.0.0/images/auth/google.svg" alt="Google">
                Google
            </a>

            <a href="/api/auth/facebook" 
                class="flex items-center justify-center w-full px-4 py-3 border-2 border-[#1877F2] rounded-xl shadow-sm bg-[#1877F2] text-sm font-bold text-white hover:bg-[#166fe5] transition duration-300">
                <svg class="h-5 w-5 mr-3 fill-current text-white" viewBox="0 0 24 24">
                    <path d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"/>
                </svg>
                Facebook
            </a>
        </div>

        <p class="mt-8 text-center text-sm text-gray-500 font-medium">
            Sudah bergabung? 
            <a href="/login" class="font-bold text-indigo-600 hover:underline">Masuk disini</a>
        </p>
    </div>
</main>

</body>
</html>